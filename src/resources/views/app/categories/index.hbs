{{#section 'title'}}Category Management{{/section}}
{{#section 'current'}}categories{{/section}}


{{!-- Head section --}}
<nav class="Head" aria-label="breadcrumb">
  <ol class="Breadcrumb">
    <li class="Breadcrumb__item"><a href="/v1">Home</a></li>
    <li class="Breadcrumb__item" aria-current="page">Categories</li>
  </ol>
  <h1 class="Heading">Category Management</h1>
</nav>
{{!-- End of Head section --}}

{{!-- Available categories --}}
<section class="Row">
  <div class="Col lg-12 sm-12">
    <h2 class="Heading">Available categories</h2>
    <div class="Actions">
      <div class="Actions-left">
        <div class="Field__option">
          <input type="checkbox" class="Check" name="id[]" value="" id="select-all" data-select-all="select-all">
          <label for="select-all">Select all</label>
        </div>
        <div class="Actions__seperate"></div>
        <button class="Btn" data-size="sm" data-variant="outline danger" title="Delete selected"
          data-dialog-target="#delete-selected-dialog" id="delete-selected">
          <i class="fa-regular fa-trash"></i> Delete
        </button>
      </div>
      <div class="Actions-right">
        {{#if (when data.deletedCount 'gt' 0)}}
          <a href="/v1/categories{{routeI 'crud.get_many_deleted'}}" class="Text-link">
            {{!-- <i class="fa-regular fa-trash"></i> --}}
            <i class="fa-regular fa-circle-trash"></i>
            Removed categories ({{data.deletedCount}})
          </a>
          <div class="Actions__seperate"></div>
        {{/if}}
        <a href="/v1/categories{{routeI 'crud.create'}}" class="Btn" data-variant="success" data-size="sm">
          <i class="fa-regular fa-circle-plus"></i> Add new
        </a>
      </div>
    </div>
    <div class="Box Box-scrollable">
      <table class="Table Table-hover">
        {{!-- <caption>List</caption> --}}
        <thead>
          <tr>
            <th scope="col">
              {{!-- <input type="checkbox" class="Check" name="item[]" value="" id="select-all"> --}}
            </th>
            {{!-- <th>#</th> --}}
            <th>Name</th>
            <th>Image</th>
            <th>Description</th>
            <th>Added by</th>
            <th>Added at</th>
            <th>Modified at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data.items}}
            <tr class="Item">
              <td scope="Row">
                <input type="checkbox" class="Check" name="id[]" value="{{this._id}}" data-select-target="select-all">
              </td>
              {{!-- <td><p>{{increase @index 1}}</p></td> --}}
              <td class="Item__name" width="25%">
                <a href="/v1/categories{{routeI 'crud.get_one' this._id}}" class="Text-limit-3">{{this.name}}</a>
              </td>
              {{!-- <td class="Item__name">
                <a href="#" class="Text-link">{{this.createdBy.username}}</a>
              </td> --}}
              <td class="Item__img">
                <picture>
                  {{!-- <source srcset="/uploads/categories/{{webpFormat this.img}}" type="image/webp"> --}}
                  <img src="/uploads/categories/{{this.img}}" alt="{{this.name}}" title="{{this.name}}"
                    loading="lazy" decoding="async" fetchpriority="true"
                    class="Img" data-variant="thumbnail" data-dialog-target="#imgviewing-dialog">
                </picture>
              </td>
              <td class="Item__desc" width="25%">
                <p class="Text-limit-3">{{this.desc}}</p>
              </td>
              <td class="">
                <a href="/v1/u/{{this.createdBy.username}}" class="Text-link">{{this.createdBy.username}}</a>
              </td>
              <td class="Item__time">
                {{dateFormat this.createdAt 'dateShort'}}<br>{{dateFormat this.createdAt 'timeMedium'}}
              </td>
              <td class="Item__time">
                {{#if this.editedAt}}
                  {{dateFormat this.editedAt 'dateShort'}}<br>{{dateFormat this.editedAt 'timeMedium'}}
                {{else}}
                  -
                {{/if}}
              </td>
              <td class="Item__actions">
                <a href="/v1/categories{{routeI 'crud.edit' this._id}}" title="Edit '{{this.name}}'"
                  class="Btn" data-size="sm" data-variant="info outline">
                  <i class="fa-regular fa-pen-to-square"></i>
                </a>
                <button title="Delete '{{this.name}}'" data-dialog-target="#delete-dialog" data-form-id="{{this._id}}"
                  class="Item__actions-delete Btn" data-size="sm" data-variant="outline danger">
                  <i class="fa-regular fa-trash"></i>
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <th colspan="8">
          </th>
        </tfoot>
        <div id="desc-popover" popover>
        </div>
      </table>
    </div>
  </div>
</section>
{{!-- End of Available categories --}}


{{!-- Image viewing Modal --}}
<dialog id="imgviewing-dialog" class="Dialog" data-size="lg">
  <form class="Dialog__form" method="dialog" id="imgviewing-dialog-form">
    <div class="Dialog__header"></div>
    <div class="Dialog__body">
      <img class="Dialog__img Img" data-variant="thumbnail" src="" alt="">
    </div>
  </form>
  <button class="Dialog__close" formmethod="dialog" form="imgviewing-dialog-form"></button>
</dialog>
{{!-- End of Image viewing Modal --}}

{{!-- Modal Delete --}}
<dialog id="delete-dialog" class="Dialog">
  <form class="Dialog__form" method="dialog">
    <input type="hidden" name="id" disabled>
    <div class="Dialog__header">Confirmation</div>
    <div class="Dialog__body">
      You really want to perform this action?
    </div>
    <div class="Dialog__footer">
      <button type="submit" class="Btn" data-variant="danger">Yes, delete it!</button>
      <button type="submit" class="Btn" data-variant="grey" formmethod="dialog">Cancel</button>
    </div>
  </form>
</dialog>
{{!-- End of Modal Delete --}}

{{!-- Modal Delete Selected --}}
<dialog id="delete-selected-dialog" class="Dialog">
  <form class="Dialog__form" method="dialog">
    <div class="Dialog__header">Confirmation</div>
    <div class="Dialog__body">
      <p class="P1 M-b-2">You really want to delete these following categories?</p>
      <ul>
        <li><strong>...</strong></li>
      </ul>
    </div>
    <div class="Dialog__footer">
      <button type="submit" class="Btn" data-variant="danger">Yes, delete them!</button>
      <button type="submit" class="Btn" data-variant="grey" formmethod="dialog">Cancel</button>
    </div>
  </form>
</dialog>
{{!-- End of Modal Delete Selected --}}

<script src="/js/pages/categories/index.js"></script>