{
  "name": "instances-api",
  "version": "1.0.0",
  "main": "src/main.js",
  "description": "instances-api created by btoann",
  "scripts": {
    "prettying": "lint-staged",
    "build:sass": "sass src/resources/scss:public/styles --no-source-map",
    "build:ts": "tsc",
    "build": "npm-run-all --parallel build:*",
    "watch:sass": "sass --watch src/resources/scss:public/styles --no-source-map",
    "watch:ts": "tsc --watch",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Css\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm-run-all --parallel watch:*\" \"yarn run serve-debug\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch:ts\" \"yarn run serve\"",
    "serve-debug": "nodemon --inspect dist/main.js",
    "serve": "node dist/main.js",
    "start": "yarn run build && yarn run watch",
    "dev": "yarn run build && yarn run watch-debug",
    "staging": "NODE_ENV=staging yarn start",
    "production": "NODE_ENV=production yarn start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "btoann",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bootstrap": "^5.3.0-alpha3",
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "express-list-routes": "^1.1.5",
    "express-session": "^1.17.3",
    "json-serve": "^0.1.0",
    "json-server": "^0.17.3",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "marked": "^7.0.5",
    "method-override": "^3.0.0",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "mongoose": "^7.4.3",
    "mongoose-schema-jsonschema": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "redis": "^4.6.8",
    "slugify": "^1.6.6",
    "unique-slug": "^4.0.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/json-server": "^0.14.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/redis": "^4.0.11",
    "husky": "4.3.8",
    "lint-staged": "^13.2.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7",
    "sass": "^1.62.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  },
  "_moduleAliases": {
    "@": "dist",
    "@controllers": "dist/app/controllers",
    "@middlewares": "dist/app/middlewares",
    "@models": "dist/app/models"
  },
  "lint-staged": {
    "src/**/*.{js,json}": "prettier --single-quote --trailing-comma all --tab-width 2 --write",
    "src/**/*.scss": "prettier --trailing-comma all --tab-width 2 --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btoann/api.instances.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/btoann/api.instances/issues"
  },
  "homepage": "https://github.com/btoann/api.instances#readme"
}
